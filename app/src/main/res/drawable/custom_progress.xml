<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон (красный) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#D35F5F"/> <!-- Красный фон -->
            <corners android:radius="50dp"/> <!-- Закругление краёв -->
        </shape>
    </item>

    <!-- Прогресс (зеленый) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50"/> <!-- Зеленый цвет заполнения -->
                <corners android:radius="50dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
